<h1>My Tasks</h1>
<% if @mytasks.blank? %>
    <h3> No Tasks</h3>
<% else %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Status</th>
        <th>Title</th>
        <th>Content</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @mytasks.each do |task| %>
          <tr>
            <!--<td><%#= link_to task.id, task_path(task) %></td>-->
            <td><label class="checkbox">
              <% if task.check == 0 %>
                  <input type="checkbox" readonly="true"> Pending
              <% else %>
                  <input type="checkbox" checked="checked" readonly="true"> Completed
              <% end %>
            </label></td>
            <td><%= link_to task.title , task_path(task)%></td>
            <td><%= task.content %></td>
            <td><%= l task.created_at %></td>
            <td>
              <%#= link_to t('.show', :default => t("helpers.links.show")),
                          task_path(task), :class => 'btn btn-mini' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_task_path(task), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          task_path(task),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
<% end %>
</tbody>
</table>

<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn' %>

  <%= link_to t('.Create New Task', :default => t("helpers.links.Create New Task")),
              new_task_path,
              :class => 'btn btn-primary' %>

</div>